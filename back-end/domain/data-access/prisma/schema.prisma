// npx prisma format

// npx prisma migrate dev 

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ControlCenter {
  id           Int            @id @default(autoincrement())
  name         String
  users        User[]
  scenes       Scene[]
  lightSources LightSources[]
}

model User {
  id              Int           @id @default(autoincrement()) @unique
  name            String        @unique
  password        String
  admin           Boolean?      @default(false)
  controlCenter   ControlCenter @relation(fields: [controlCenterId], references: [id])
  controlCenterId Int
}

model LightSources {
  id              Int           @id @default(autoincrement())
  name            String
  location        String
  brightness      Int?
  status          Boolean?
  controlCenter   ControlCenter @relation(fields: [controlCenterId], references: [id])
  controlCenterId Int
  scenes          Scene[]

  @@unique([name, location]) // unique combination of name and location
}

model Scene {
  id              Int            @id @default(autoincrement())
  name            String         @unique
  lightSources    LightSources[]
  controlCenter   ControlCenter  @relation(fields: [controlCenterId], references: [id])
  controlCenterId Int
}
